   onSubmit: InfosubmitHandler,\n      children: [/*#__PURE__*/_jsx(\"label\", {\n        for: \"contactInformations\",\n        children: \"Enter Contact Informations\"\n      }), /*#__PURE__*/_jsx(\"textarea\", {\n        type: \"text\",\n        name: \"contactInformations\",\n        rows: \"4\",\n        cols: \"40\",\n        placeholder: \"your Gmail or cell number.\",\n        ref: ResponseData,\n        required: true\n      }), /*#__PURE__*/_jsxs(\"div\", {\n        className: classes.twobtn,\n        children: [/*#__PURE__*/_jsx(\"button\", {\n          className: classes.button89,\n          type: \"submit\",\n          role: \"button\",\n          children: \"Submit\"\n        }), /*#__PURE__*/_jsx(\"button\", {\n          className: classes.button89,\n          type: \"button\",\n          role: \"button\",\n          onClick: props.close,\n          children: \"Close\"\n        })]\n      })]\n    })\n  });\n};\n\nexport default DetailForm;","map":null,"metadata":{},"sourceType":"module"}